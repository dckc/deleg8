{
  "manifest_version": 2,

  "name": "Simple Session",
  "author": "Dan Connolly",
  "description": "Get simple.com session credentials.",
  "homepage_url": "http://www.madmode.com/search/label/finances/",
  "version": "1.0",
  "background": {
    "scripts": ["bg.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_title": "View session creds",
    "default_popup": "popup.html"
  },
  "permissions": [
    "webNavigation",
    "activeTab",
    "cookies",
    "https://bank.simple.com/"
  ]
}
